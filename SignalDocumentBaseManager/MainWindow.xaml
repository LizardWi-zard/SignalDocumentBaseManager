                                   HorizontalAlignment="Left" 
                                   Grid.Column="0" />
                        
                        <TextBlock FontSize="36" 
                                   Text="{Binding Type}" 
                                   TextWrapping="Wrap"  
                                   HorizontalAlignment="Left" 
                                   Grid.Column="1"  />
                        
                        <TextBlock FontSize="36" Text="{Binding Name}" TextWrapping="Wrap" HorizontalAlignment="Left" Grid.Column="2"  />
                        <TextBlock FontSize="36" Text="{Binding Number}" TextWrapping="Wrap"  HorizontalAlignment="Left" Grid.Column="3"  />
