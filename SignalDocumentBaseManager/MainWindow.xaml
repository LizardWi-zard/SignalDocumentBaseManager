                        <TextBlock FontSize="36" Text="{Binding EntryDate}" TextWrapping="Wrap"  HorizontalAlignment="Left" Grid.Column="5"  />
                    </Grid>
                </StackPanel>
            </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

